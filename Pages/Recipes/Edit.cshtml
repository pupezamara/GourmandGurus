@page
@model GourmandGurus.Pages.Recipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Recipe.ID" />
            <div class="form-group">
                <label asp-for="Recipe.RecipeName" class="control-label"></label>
                <input asp-for="Recipe.RecipeName" class="form-control" />
                <span asp-validation-for="Recipe.RecipeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Ingredients" class="control-label"></label>
                <textarea asp-for="Recipe.Ingredients" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Instructions" class="control-label"></label>
                <textarea asp-for="Recipe.Instructions" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.CookingTime" class="control-label"></label>
                <input asp-for="Recipe.CookingTime" class="form-control" />
                <span asp-validation-for="Recipe.CookingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" asp-for="Recipe.Vegetarian" class="form-check-input" />
                    <label asp-for="Recipe.Vegetarian" class="form-check-label">Vegetarian</label>
                    <span asp-validation-for="Recipe.Vegetarian" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.CuisineID" class="control-label">Cuisine</label>
                <select asp-for="Recipe.CuisineID" class="form-control" asp-items="ViewBag.CuisineID">
                </select>
                <span asp-validation-for="Recipe.CuisineID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Recipe.CategoryID" class="control-label">Category</label>
                <select asp-for="Recipe.CategoryID" class="form-control" asp-items="ViewBag.CategoryID">
                </select>
                <span asp-validation-for="Recipe.CategoryID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
